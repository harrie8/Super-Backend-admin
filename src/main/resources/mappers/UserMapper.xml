<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sppart.admin.user.domain.mapper.UserMapper">

    <!--    todo db 설정이 끝나면 table 이름 변경하기-->
    <select id="findById" parameterType="String" resultType="com.sppart.admin.user.domain.Users">
        SELECT u.user2_id, u.id, u.password, r.name
--         FROM `user` u
        FROM `user2` u
                 INNER JOIN role r ON u.role_id = r.id
        WHERE u.id = #{id};
    </select>
</mapper>